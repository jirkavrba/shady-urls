<h3>Link generated!</h3>

<div class="mt-4 mb-2">
    <div class="form-group">
        <small class="form-text"><%= @original %> &rarr; </small>
        <input name="url" class="form-control" readonly value={@generated} onClick="this.setSelectionRange(0, this.value.length)"><br/>
    </div>
</div>

<a href={Routes.page_path(ShadyUrlsWeb.Endpoint, :index)} class="btn btn-primary">Make another link shady</a>